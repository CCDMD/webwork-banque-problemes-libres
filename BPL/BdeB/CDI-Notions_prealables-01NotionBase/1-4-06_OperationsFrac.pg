DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "PGchoicemacros.pl",
   "contextFraction.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   "PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Fraction");

$a = random(2,4);
$b = random(7,9);
$c = random(2,4);
$d = list_random(1,3,7);

$n = $a*$b;
$operation = Compute("($n * 5/$b)/($c/5-3/4+$d/10)")->reduce;

Context("LimitedFraction");

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Effectuer l'opération suivante sans la calculatrice et simplifier le résultat.
\[ \frac{$n \times \frac{5}{$b}}{\frac{$c}{5}-\frac{3}{4}+\frac{$d}{10}}\]
$PAR
Réponse: \{ans_rule(10)\}

END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#

ANS($operation->cmp(
    studentsMustReduceFractions=>1,
    showFractionReductionWarnings=>1));


ENDDOCUMENT();        
