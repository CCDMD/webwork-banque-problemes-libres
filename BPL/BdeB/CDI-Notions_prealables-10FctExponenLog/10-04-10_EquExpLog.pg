DOCUMENT();

loadMacros(
"PGstandard.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
"PGcourse.pl",
#"answerHints.pl",
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$a=random(2,10,1);
$b=random(2,10,1);

BEGIN_TEXT
Résoudre les équations suivantes. S'il existe plusieurs solutions, les séparer par une virgule; s'il n'y en a pas, 
écrire « aucune ».
$PAR

a) \(\ln(\ln{x})=1\) $BR
b) \(e^{{$a}x}=$b e^{-x}\)
$PAR
a) \(x = \) \{ans_rule(30)\} $BR
b) \(x = \) \{ans_rule(30)\}

END_TEXT

Context()->strings->add(aucune=>{});
Context()->flags->set(useBaseTenLog=>1);

$ans1 = Compute("e^e");
$ans2 = Compute("ln($b)/($a + 1)");

ANS($ans1->cmp);
ANS($ans2->cmp);


ENDDOCUMENT();
