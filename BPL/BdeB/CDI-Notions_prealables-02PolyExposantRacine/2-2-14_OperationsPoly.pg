DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   "contextLimitedPolynomialFr.pl",
#  "CofIdaho_macrosFr.pl",
  "AnswerFormatHelp.pl",
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

########################################################################

Context("Numeric");
Context()->variables->add(y=>'Real'); 

$a = random(3,9,1);

$b = Compute("2*$a+2");
$c = Compute("2*$a+6");
$d = Compute("2*$a");

Context("LimitedPolynomial");
Context()->variables->add(y=>'Real'); 

$ans = Compute("-$d+$b*x*y+$c*x^2*y^3")->reduce;

########################################################################

Context()->texStrings;
BEGIN_TEXT
Effectuer la division d'un polynôme par un monôme suivante.
\[
\frac{$d xy - $b x^2y^2 - $c x^3 y^4}{-xy}
\]
Réponse : \{ ans_rule(40)\}

END_TEXT
Context()->normalStrings;

Context()->texStrings;
BEGIN_SOLUTION
$PAR
\[  \begin{array}{ll} \dfrac{$d xy - $b x^2y^2 - $c x^3 y^4}{-xy} 
&= \dfrac{$d xy}{-xy} + \dfrac{-$b x^2y^2}{-xy} + \dfrac{- $c x^3 y^4}{-xy}\\
&= $ans \\
&= $c x^2 y^3 +$b xy -$d\end{array}
\] 

END_SOLUTION
Context()->normalStrings;

########################################################################

ANS( $ans->cmp );

ENDDOCUMENT();
