DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl", 
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$b = random(2,7,1);
$c = random(2,7,1);
$d = random(2,7,1);
$e = random(2,7,1);
$f = random(2,7,1);
$g = random(2,7,1);
$h = random(2,7,1);

BEGIN_TEXT
L'expression \($a ($e x^3 + $b x^2-$c x+$d)-($f x^2+$g x-$h)\) est équivalente à $BR $BR
\{ans_rule(5) \}\( x^3 +\)\{ans_rule(5) \}\( x^2 +\)\{ans_rule(5) \} \(x+\)\{ans_rule(5) \}
$BR
END_TEXT

$ans1 = Real($a*$e);
$ans2 = Real($a*$b-$f);
$ans3 = Real(-$a*$c-$g);
$ans4 = Real($a*$d+$h);

ANS($ans1->cmp);
ANS($ans2->cmp);
ANS($ans3->cmp);
ANS($ans4->cmp);


ENDDOCUMENT();        # This should be the last executable line in the problem.
