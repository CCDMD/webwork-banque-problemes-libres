DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"PGcourse.pl",
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
$a=random(2,10,1);
$b=random(2,10,1);
$c=random(2,9,1);

#exposants
$n = random(3,8);
do{$m = random(3,8);} until ($m!=$n);


$g = Formula("(1+$a*x)^($n)*($b+$c*x-x^2)^($m)");
$Dg = $g->D->reduce;

Context()->texStrings;
BEGIN_TEXT

$PAR
Dériver \(g(x) = $g\).

$PAR

\(g'(x)=\) \{ans_rule(60)\}

END_TEXT
Context()->normalStrings;

ANS($Dg->cmp);

ENDDOCUMENT();
